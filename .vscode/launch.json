{
    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/RulesValidatorApi.Service.v1/bin/Debug/net6.0/RulesValidatorApi.Service.dll",
            "args": [],
            "cwd": "${workspaceFolder}/RulesValidatorApi.Service.v1/",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/RulesValidatorApi.Service.v1/bin/Debug/net6.0/RulesValidatorApi.Service.dll",
            "args": [],
            "cwd": "${workspaceFolder}/RulesValidatorApi.Service.v1/",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "launchUrl": "api/v1/csv"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}